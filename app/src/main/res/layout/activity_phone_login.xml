<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_phoneNumber_login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs_bg"
        android:padding="10dp"
        android:hint="Write Phone Number here..."
        android:textAllCaps="false"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_phone_android_black_24dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_verification_code"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/edt_phoneNumber_login"
        android:background="@drawable/inputs_bg"
        android:padding="10dp"
        android:hint="Write verification code here..."
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_lock_black_24dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send_ver_code"
        android:text="Send VerificationCode"
        android:layout_below="@id/edt_verification_code"
        android:background="@drawable/buttons_bg"
        android:textColor="@android:color/background_light"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_verifay"
        android:text="Verify"
        android:layout_below="@id/btn_send_ver_code"
        android:background="@drawable/buttons_bg"
        android:textColor="@android:color/background_light"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="2dp"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        />


</RelativeLayout>